{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "location": {
      "type": "string"
    },
    "avSets": {
      "type": "object",
      "metadata": {
        "description": "Collection of availability sets names."
      }
    }
  },
  "resources": [
    {
      "type": "Microsoft.Compute/availabilitySets",
      "name": "[concat(parameters('avSets')[copyIndex()])]",
      "apiVersion": "2017-03-30",
      "location": "[parameters('location')]",
      "copy": {
        "name": "avSetCopy",
        "count": "[length(parameters('avSets'))]"
      },
      "properties": {
        "platformUpdateDomainCount": 5,
        "platformFaultDomainCount": 2
      },
      "sku": {
        "name": "aligned"
      }
    }
  ],
  "outputs": {
    "adsAvSetID": {
      "type": "string",
      "value": "[resourceId('Microsoft.Compute/availabilitySets',parameters('avSets')[0])]"
    },
    "webAvSetID": {
      "type": "string",
      "value": "[resourceId('Microsoft.Compute/availabilitySets',parameters('avSets')[1])]"
    },
    "sqlAvSetID": {
      "type": "string",
      "value": "[resourceId('Microsoft.Compute/availabilitySets',parameters('avSets')[2])]"
    },
    "pkiAvSetID": {
      "type": "string",
      "value": "[resourceId('Microsoft.Compute/availabilitySets',parameters('avSets')[3])]"
    },
    "devAvSetID": {
      "type": "string",
      "value": "[resourceId('Microsoft.Compute/availabilitySets',parameters('avSet')[4])]"
    },
    "lnxAvSetID": {
      "type": "string",
      "value": "[resourceId('Microsoft.Compute/availabilitySets',parameters('avSet')[5])]"
    }
  }
}
